        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear">
            <TextView
                android:text="수리점 정보"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="#384051"
                android:layout_width="match_parent"
                android:layout_height="53dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgShopInfo"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/repairshop_image"
            android:layout_below="@id/linear"/>

        <TextView
            android:id="@+id/textBest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="베스트 샵"
            android:layout_centerInParent="true"
            android:layout_below="@id/imgShopInfo"/>

        <TextView
            android:id="@+id/textShopName"
            android:text="텍스트뷰 수리점 이름"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_below="@id/textBest" />

        <TextView
            android:id="@+id/textShopLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="텍스트뷰 수리점 위치"
            android:layout_below="@id/textShopName"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>

