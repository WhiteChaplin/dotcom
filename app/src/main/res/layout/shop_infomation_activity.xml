            android:textSize="17dp"
            android:layout_toRightOf="@id/textSaturday"
            android:layout_below="@id/textWeekdayTime"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textSunday"
            android:text="일요일 및 공휴일"
            android:textSize="17dp"
            android:layout_below="@id/textSaturday"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textSundayTime"
            android:text=" 9:00~18:00"
            android:textSize="17dp"
            android:layout_toRightOf="@id/textSunday"
            android:layout_below="@id/textSaturdayTime"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

        <View
            android:background="#66bdbdbd"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

