<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawerLayout"
    android:orientation="vertical">

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/btn_sidemenu"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10.3dp"
            android:layout_marginTop="16.7dp"/>

        <TextView
            android:id="@+id/textLogo"
            android:layout_width="85.8dp"
            android:layout_height="20.0dp"
            android:background="@mipmap/imgview_toplogo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="18dp"/>


        <ImageView
            android:id="@+id/btnAlarm"
            android:background="@drawable/x_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"/>


        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewFlipper1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_background_matching"
                android:id="@+id/main1"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_case_sharing"
                android:id="@+id/main2"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_find_repairshop"
                android:id="@+id/main3"
                android:orientation="vertical">
            </LinearLayout>
        </ViewFlipper>

