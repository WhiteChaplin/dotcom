<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">
    <ImageView
        android:id="@+id/imgview_login"
        android:layout_width="122.5dp"
        android:layout_height="76.3dp"
        android:src="@mipmap/imgview_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="79.8dp"/>
    <ImageView
        android:id="@+id/imgview_id"
        android:layout_width="25.0dp"
        android:layout_height="25.0dp"
        android:src="@mipmap/imgview_id"
        android:layout_below="@id/imgview_login"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58.2dp"
        android:layout_marginTop="113dp"/>
    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotomedium"
        android:text="ID"
        android:gravity="start|top"
        android:textColor="#ffffffff"
        android:textSize="12dp"
        android:letterSpacing="0.05"
        android:layout_below="@id/imgview_login"
        android:layout_toEndOf="@id/imgview_id"
        android:layout_marginStart="7.8dp"
        android:layout_marginTop="119dp"/>
    <EditText
        style="@style/LoginTheme"
        android:theme="@style/LoginTheme"
        android:id="@+id/editID"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/imgview_idline"
        android:layout_alignBottom="@id/imgview_id"
        android:layout_marginBottom="-8.3dp"
        android:layout_marginLeft="170dp"/>

    <ImageView
        android:id="@+id/imgview_password"
        android:layout_width="25.0dp"
        android:layout_height="25.0dp"
        android:src="@mipmap/imgview_pw"
        android:layout_alignTop="@id/editID"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58.3dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/text_id"/>
    <TextView
        android:id="@+id/text_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotomedium"
        android:text="PASSWORD"
        android:gravity="start|top"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:letterSpacing="0.05"
        android:layout_alignTop="@id/editID"
        android:layout_toEndOf="@id/imgview_password"
        android:layout_marginStart="7.7dp"
        android:layout_marginTop="66dp"
        android:layout_below="@id/editID"/>
    <EditText
        style="@style/LoginTheme"
        android:theme="@style/LoginTheme"
        android:id="@+id/editPassword"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/imgview_pwline"
        android:layout_alignBottom="@id/imgview_password"
        android:layout_marginBottom="-8.3dp"
        android:layout_below="@id/editID"
        android:layout_marginLeft="170dp"
        android:password="true"
        />
    <ImageView
        android:id="@+id/btn_login"
        android:layout_width="166.5dp"
        android:layout_height="40.0dp"
        android:src="@mipmap/btn_login"
        android:layout_alignTop="@id/editPassword"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/text_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Time This App ? Click Here"
        android:gravity="center_horizontal|top"
        android:textColor="#ffffffff"
        android:fontFamily="@font/robotoregular"
        android:textSize="12dp"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/text_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you Forgot ID / PW ?  Click Here"
        android:gravity="center_horizontal|top"
        android:textColor="#ffffffff"
        android:fontFamily="@font/robotoregular"
        android:textSize="12dp"
        android:layout_below="@id/text_first"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>