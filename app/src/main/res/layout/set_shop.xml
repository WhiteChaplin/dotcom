<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수리점 이름"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/editShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="수리점 이름 입력"/>

        <TextView
            android:id="@+id/textShopLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수리점 위도 입력"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/editShopLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="수리점 위도 입력"/>

        <TextView
            android:id="@+id/textShopLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수리점 경도"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/editShopLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="수리점 경도 입력"/>

        <TextView
            android:id="@+id/textShopCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수리점 위치 도시"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/editShopCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="수리점 위치 도시 입력"/>


        <TextView
            android:id="@+id/textShopID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수리점 아이디"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/btnSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수리점 등록"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/explainRepairShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수리점 설명"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/editExplainRepairShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="수리점 설명 입력"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/repairShopService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수리점 가능 서비스"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/editRepairShopService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="수리점 가능 서비스 입력"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/workTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영업시간"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/workTimeWeekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평일"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/editWorkTimeWeekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="평일 영업 시간"/>

        <TextView
            android:id="@+id/workTimeSaturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토요일"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/editWorkTimeSaturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="토요일 영업 시간"/>

        <TextView
            android:id="@+id/workTimeSunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일요일 및 공휴일"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/editWorkTimeSunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="일요일 및 공휴일 영업 시간"/>


        <TextView
            android:id="@+id/textViewTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수리점 전화번호"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/editTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="010-0000-0000"/>

        <TextView
            android:id="@+id/textViewKakao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오톡 아이디"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/editKakao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="카카오톡 아이디"/>

        <Button
            android:id="@+id/btnNowState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수리점 정보 업로드"
            android:layout_marginTop="20dp"
            android:textSize="20dp"/>


    </LinearLayout>

</ScrollView>
